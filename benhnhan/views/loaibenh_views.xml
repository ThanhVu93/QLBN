<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--tree view-->
        <record id="loaibenh_tree_view" model="ir.ui.view">
            <field name="name">loaibenh.tree</field>
            <field name="model">qtsx.loaibenh</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                </tree>
            </field>
        </record>
        <!--form view-->
        <record id="loaibenh_form_view" model="ir.ui.view">
            <field name="name">loaibenh.form</field>
            <field name="model">qtsx.loaibenh</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                            </group>
                        </group>
                    </sheet>

                </form>
            </field>
        </record>
        <!--search view-->
        <record id="loaibenh_search" model="ir.ui.view">
            <field name="name">loaibenh.search</field>
            <field name="model">qtsx.loaibenh</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                </search>
            </field>
        </record>

        <!--action view-->
        <record id="loaibenh_action" model="ir.actions.act_window">
            <field name="name">Loại bệnh</field>
            <field name="res_model">qtsx.loaibenh</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo>